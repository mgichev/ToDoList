<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/idNoteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/noteNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        app:layout_constraintStart_toEndOf="@id/idNoteTextView"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/removeNoteButton"
        android:background="@drawable/ic_delete_24dp"
        app:layout_constraintTop_toTopOf="@id/noteNameTextView"
        app:layout_constraintBottom_toBottomOf="@id/noteNameTextView"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>